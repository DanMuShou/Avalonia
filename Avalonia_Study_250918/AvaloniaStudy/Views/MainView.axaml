<UserControl
    x:Class="AvaloniaStudy.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:styles="clr-namespace:AvaloniaStudy.Styles"
    xmlns:viewModels="clr-namespace:AvaloniaStudy.ViewModels"
    d:DesignHeight="630"
    d:DesignWidth="1048"
    x:DataType="viewModels:MainViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="Button.small">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="MediumPurple" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="7,2" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style Selector="Button.small:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="Purple" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="styles|AnimationPopup.channelPopup">
            <Setter Property="Width" Value="0" />
            <Setter Property="Height" Value="0" />
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition
                        Easing="QuarticEaseOut"
                        Property="Width"
                        Duration="0:0:0.15" />
                    <DoubleTransition
                        Easing="QuarticEaseOut"
                        Property="Height"
                        Duration="0:0:0.15" />
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="styles|AnimationPopup.channelPopup.open">
            <Setter Property="Width" Value="300" />
            <Setter Property="Height" Value="600" />
        </Style>
    </UserControl.Styles>

    <!--  主网格  -->
    <Grid Name="MainGrid" RowDefinitions="Auto, *, Auto">
        <!--  频道配置弹出面板关闭区域  -->
        <Border
            Grid.Row="0"
            Grid.RowSpan="3"
            Background="Transparent"
            IsVisible="{Binding IsChannelConfigOpen}"
            PointerPressed="InputElement_OnPointerPressed"
            ZIndex="1" />
        <!--  频道配置弹出面板  -->
        <styles:AnimationPopup
            x:Name="ChannelConfigPopupBorder"
            Grid.Row="0"
            Grid.RowSpan="3"
            Margin="8,0,0,8"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="Red"
            Classes="channelPopup"
            Classes.open="{Binding IsChannelConfigOpen}"
            ZIndex="2">
            <Label Content="1231231" Background="Red"></Label>
        </styles:AnimationPopup>

        <!--  标题栏  -->
        <Grid
            Grid.Row="0"
            Height="40"
            Background="{DynamicResource 'MidGreyBrush '}"
            ColumnDefinitions="Auto, Auto, *, Auto, Auto">
            <Grid.Styles>
                <Style Selector="Button">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Width" Value="45" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                </Style>
                <Style Selector="Button Image">
                    <Setter Property="Width" Value="24" />
                </Style>
                <Style Selector="Button /template/ ContentPresenter">
                    <Setter Property="Transitions">
                        <Transitions>
                            <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" />
                        </Transitions>
                    </Setter>
                </Style>
                <Style Selector="Button:pointerover /template/ ContentPresenter">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="RenderTransform" Value="scale(1.14)" />
                    <Setter Property="Opacity" Value="0.6" />
                </Style>
            </Grid.Styles>
            <Button
                Grid.Column="0"
                Margin="8,0,0,0"
                Content="显示" />
            <Button
                Grid.Column="1"
                Margin="4,0"
                Content="上锁" />
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,16,0"
                    FontSize="24"
                    FontWeight="Black"
                    Text="{Binding BoldTitle}" />
                <TextBlock FontSize="24" Text="{Binding RegularTitle}" />
            </StackPanel>
            <Button
                Grid.Column="3"
                Margin="4,0"
                Content="分享" />
            <Button
                Grid.Column="4"
                Margin="0,0,8,0"
                Content="设置" />
        </Grid>

        <!--  主显示区  -->
        <Grid
            Grid.Row="1"
            Background="{DynamicResource 'DarkBlueBrush '}"
            ColumnDefinitions="Auto, Auto, *">
            <!--  音量条  -->
            <Grid
                Grid.Column="0"
                Width="150"
                Margin="0,16"
                RowDefinitions="*, Auto, Auto">

                <!--  音量刻度  -->
                <Grid
                    Grid.Row="0"
                    Margin="8,0"
                    ColumnDefinitions="Auto, *, Auto, Auto"
                    RowDefinitions="3*, 3*, 3*, 9*, 5*, 4*, 9*, 9*, 9*, 6*, *">
                    <Grid.Styles>
                        <Style Selector="TextBlock">
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </Grid.Styles>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="0 —" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="-3 —" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="-6 —" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Text="-9 —" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Text="-18 —" />
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Text="-23 —" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Text="-27 —" />
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        Text="-36 —" />
                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="0"
                        Text="-45 —" />
                    <TextBlock
                        Grid.Row="9"
                        Grid.Column="0"
                        Text="-54 —" />
                    <TextBlock
                        Grid.Row="10"
                        Grid.Column="0"
                        Text="asasdd" />

                    <Grid
                        Grid.Row="0"
                        Grid.RowSpan="11"
                        Grid.Column="1"
                        Width="20"
                        RowDefinitions="23*, 37*">
                        <Rectangle
                            Grid.Row="0"
                            Width="20"
                            Margin="0,8,0,-8"
                            Fill="Red" />
                        <Rectangle
                            Grid.Row="1"
                            Width="20"
                            Margin="0,8,0,0"
                            Fill="White" />
                    </Grid>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Text="—" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        Text="—" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        Text="—" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="2"
                        Text="—" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="2"
                        Text="—" />
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="2"
                        Text="—" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="2"
                        Text="—" />
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="2"
                        Text="—" />
                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="2"
                        Text="—" />
                    <TextBlock
                        Grid.Row="9"
                        Grid.Column="2"
                        Text="—" />
                    <TextBlock
                        Grid.Row="10"
                        Grid.Column="2"
                        Text="---" />

                    <!--  箭头  -->
                    <Canvas
                        Grid.Row="0"
                        Grid.RowSpan="11"
                        Grid.Column="3"
                        Width="20">
                        <Rectangle
                            Canvas.Top="10"
                            Width="20"
                            Height="20"
                            Fill="White" />
                    </Canvas>
                </Grid>

                <!--  LUFS 文本  -->
                <TextBlock
                    Grid.Row="1"
                    Margin="0,5"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White"
                    Text="LUFS" />

                <!--  音量条按钮  -->
                <StackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="30"
                        Height="30"
                        Margin="4,0"
                        Padding="3"
                        Classes="small"
                        Content=" ▷" />
                    <Button
                        Margin="4,0"
                        Classes="small"
                        Content="INT-LRA" />
                </StackPanel>
            </Grid>
            <!--  详细面板  -->
            <StackPanel
                Grid.Column="1"
                Width="170"
                Margin="0,15,10,15">
                <styles:LargeLabelControl LargeText="0.0 LUFS" SmallText="瞬时" />
                <styles:LargeLabelControl
                    Background="{DynamicResource 'LightBlueBrush '}"
                    LargeText="0.0 LUFS"
                    SmallText="整合" />
                <styles:LargeLabelControl LargeText="0.0 LUFS" SmallText="响度范围" />
                <styles:LargeLabelControl LargeText="0.0 LUFS" SmallText="实时动态" />

                <styles:LargeLabelControl
                    Margin="0,0,0,16"
                    LargeText="0.0 LUFS"
                    SmallText="AVG.DYNAMIC (PLR)" />
                <styles:LargeLabelControl
                    Margin="0,0,0,4"
                    Classes="button"
                    LargeText="0.0 LUFS"
                    SmallText="瞬间最大" />
                <styles:LargeLabelControl
                    Margin="0,0,0,4"
                    Classes="button"
                    LargeText="0.0 LUFS"
                    SmallText="短期最大" />
                <styles:LargeLabelControl
                    Margin="0,0,0,4"
                    Classes="button"
                    LargeText="0.0 Db"
                    SmallText="真峰值" />

                <!--  配置按钮  -->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Width="30"
                        Height="30"
                        Margin="4,0"
                        Padding="3"
                        Classes="small"
                        Content=" ▷" />
                    <Button
                        Margin="4,0"
                        Classes="small"
                        Content="INT-LRA" />
                </StackPanel>

            </StackPanel>

            <!--  图像显示  -->
            <Rectangle Grid.Column="2" Fill="Black" />
        </Grid>

        <!--  底栏立  -->
        <Grid
            Grid.Row="2"
            Margin="8"
            Background="White"
            ColumnDefinitions="Auto, Auto, *, Auto, Auto, Auto, Auto, Auto">
            <Button
                x:Name="ChannelConfigBut"
                Grid.Column="0"
                Margin="0,0,8,0"
                Command="{Binding ChannelConfigButPressedCommand}"
                Content="频道配置" >
            </Button>
            <Button
                Grid.Column="1"
                Margin="0,0,8,0"
                Content="模式" />
            <Button
                Grid.Column="3"
                Margin="0,0,8,0"
                Content="10 秒" />
            <Button
                Grid.Column="4"
                Margin="0,0,8,0"
                Content="继续" />
            <Rectangle
                Grid.Column="5"
                Width="30"
                Margin="0,0,8,0"
                Fill="Orange" />
            <Rectangle
                Grid.Column="6"
                Width="30"
                Margin="0,0,8,0"
                Fill="Red" />
        </Grid>

    </Grid>

</UserControl>
